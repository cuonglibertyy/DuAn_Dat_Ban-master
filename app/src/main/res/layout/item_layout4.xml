<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imgLichSu"
        android:scaleType="centerCrop"
        android:src="@drawable/nhahang2"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_width="120dp"
        android:layout_height="100dp" />
    <TextView
        android:id="@+id/tvNameNHLS"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="Nguyễn Văn Đoàn"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/imgLichSu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textStyle="bold"
        android:id="@+id/tvBuaAnLS"
        android:textSize="14sp"
        android:text="Bữa trưa"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/tvNameNHLS"
        android:layout_toRightOf="@id/imgLichSu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textStyle="bold"
        android:textSize="14sp"
        android:text="Bàn 409"
        android:layout_toRightOf="@id/imgLichSu"
        android:layout_below="@+id/tvBuaAnLS"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:id="@+id/tvSoBanLS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textStyle="bold"
        android:textSize="14sp"
        android:text="Đang đặt"
        android:layout_toRightOf="@id/imgLichSu"
        android:layout_below="@+id/tvSoBanLS"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:id="@+id/tvTrangThaiLS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>